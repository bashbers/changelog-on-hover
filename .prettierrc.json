{
    "useTabs": false,
    "printWidth": 140,
    "singleQuote": true,
    "tabWidth": 4,
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "parser": "angular"
            }
        },
        {
            "files": ["*.ts", "*.js"],
            "options": {
                "semi": true,
                "trailingComma": "none",
                "singleQuote": true
            }
        },
        {
            "files": ["*.json", "*.jsonc"],
            "options": {
                "tabWidth": 2,
                "trailingComma": "none"
            }
        }
    ],
    "endOfLine": "lf"
}